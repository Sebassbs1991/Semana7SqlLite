<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7SqlLite.Login">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la clave" IsPassword="True"/>

            <Button x:Name="btnRegistro"
                    Text="Registro"
                    Clicked="btnRegistro_Clicked"/>

            <Button x:Name="btnLogin"
                    Text="Iniciar Sesión"
                    Clicked="btnLogin_Clicked"/>
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>